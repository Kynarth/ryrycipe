               <Tooltip text="%toolbtn.create.tip" />
            </tooltip></Button>
         <Button fx:id="searchBtn" onAction="#displaySearchPane" maxHeight="32.0" maxWidth="32.0" minHeight="32.0" minWidth="32.0" mnemonicParsing="false" prefHeight="32.0" prefWidth="32.0">
            <tooltip>
               <Tooltip text="%toolbtn.search.tip" />
            </tooltip></Button>
         <Button fx:id="uploadBtn" onAction="#displayUploadPane" maxHeight="32.0" maxWidth="32.0" minHeight="32.0" minWidth="32.0" mnemonicParsing="false" prefHeight="32.0" prefWidth="32.0">
          <tooltip>
              <Tooltip text="%toolbtn.upload.tip" />
          </tooltip></Button>
         <Button fx:id="languageBtn" onAction="#changeLanguage" layoutX="82.0" layoutY="8.0" maxHeight="32.0" maxWidth="32.0" minHeight="32.0" minWidth="32.0" mnemonicParsing="false" prefHeight="32.0" prefWidth="32.0">
            <tooltip>
               <Tooltip text="%toolbtn.lang.tip" />
            </tooltip></Button>
          <Separator orientation="VERTICAL" prefHeight="200.0" />
         <HBox fx:id="specificToolBtns" minHeight="33.0" prefHeight="33.0" spacing="5.0" />
      </ToolBar>
   </top>
</BorderPane>
